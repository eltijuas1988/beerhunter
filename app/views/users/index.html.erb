<div class="page-header">
  <!-- <%#= link_to new_user_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New User
  <%# end %> -->

  <%= link_to edit_user_registration_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Edit Info
  <% end %>

  <h1>User Info</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th><%= @user.username %></th>
        <th><%= @user.email %></th>
      </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <h3>My Pubs</h3>
    <thead>
      <tr>
        <th>Pub</th>
        <th>Address</th>
        <th>Contact</th>
        <th></th>
      </tr>

    </thead>

    <tbody>
      <% @user.breweries.each do |bar| %>
        <tr>
          <td><%= bar.name %></td>
          <td><%= bar.address %></td>
          <td><%= bar.contact %></td>
          <td>
            <%= link_to new_brewery_review_path(bar), class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-plus"></span>Review
            <% end %>
          </td>
        </tr>

        <th>Ratings</th>
        <% bar.reviews.each do |review| %>
          <tr>
            <td><%= review.rating %></td>
            <td><%= review.review %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
