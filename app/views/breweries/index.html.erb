<h1>Listing Breweries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <!-- <th>Latitude</th>
      <th>Longitude</th> -->
      <th>Address</th>
      <th>Contact</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%= brewery.user.email %></td>
        <!-- <td><%= brewery.latitude %></td>
        <td><%= brewery.longitude %></td> -->
        <td><%= brewery.address %></td>
        <td><%= brewery.contact %></td>
        <td><%= link_to 'Show', brewery %></td>
        <% if user_signed_in? %>
          <% if currrent_user.id == brewery.user_id %>
            <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
            <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

